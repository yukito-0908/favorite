<div class="container">
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="sign_up_item  mx-auto" style="width:60%;">
          <h4  class="mb-5 text-center">ログイン</h4>
          <div class="email d-flex justify-content-between m-3">
            <p>メールアドレス</p>
            <p><%= f.text_field :email %></p>
          </div>
          <div class="password d-flex justify-content-between m-3">
            <p>パスワード</p>
            <p><%= f.password_field :password, autocomplete: "new-password" %></p>
          </div>
          <div class="actions text-center">
            <%= f.submit "ログイン", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




