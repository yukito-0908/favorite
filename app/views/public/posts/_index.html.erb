<%= @comments.count %>件コメント
<h6 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る....</h6>
<% @comments.first(2).each do |comment| %>
  <% unless comment.id.nil? %>
    <li class="comment-container">
        <div class="comment-box">
            <div class="comment-avatar">
                <%= attachment_image_tag comment.profile, :image, fallback: "no_image.jpg", class:"comment-image", size: "40x40" %>
            </div>
            <div class="comment-text">
                <p><%= link_to "@#{comment.profile.name}", public_profile_path(comment.profile.id) %></p>
                <div class="comment-entry">
                    <%= comment.comment_content %>
                    <% pp current_user.profiles %>
                    <% pp comment.profile_id %>
                   <% if current_user.profiles.exists?(id: comment.profile.id) %>
                        <%= link_to  public_profile_post_comments_path(comment.profile.id, comment.post_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                            <i class="fas fa-trash" style="color: black;"></i>
                        <% end %>
                    <% end %>
                </div>
                <span class="comment-date pull-right">
                      <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                </span>
            </div>
        </div>
    </li>
  <% end %>
<% end %>
