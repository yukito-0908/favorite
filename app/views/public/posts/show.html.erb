<div class="container">
  <div class="row">
    <div class="col">
      <div class="post">
        <div class="post-title">
          <h5>料理詳細</h5>
            <div class="post-title">
              <p>タイトル</p>
              <p><%= @post.title %></p>
            </div>
              <div class="post-genre">
                <p>ジャンル</p>
                <p><%= @post.genre_name %></p>
              </div>
                <div class="post-price">
                  <p>ジャンル</p>
                  <p><%= @post.price %></p>
                </div>
                  <div class="post-tags">
                    <p>タグ一覧</p>
                    <% @post_tags.each do|post_tag| %>
                      <%= post_tag.tag_name %>
                    <% end %>
                  </div>

        </div>
      </div>
    </div>
  </div>
</div>