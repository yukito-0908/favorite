<div class="container">
  <div class="row">
    <div class="col">
      <div class="chat-user m-5 text-center">
        <h4>チャットユーザー</h4>
      </div>
      <% if @users.present? %>
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>ユーザーname</th>
              <th>ユーザー画像</th>
              <th>フォロー数</th>
              <th>フォロワー数</th>
              <th>DMをする</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <% if user.is_active == "F" %>
              <% else %>
                <tr>
                <td><%= user.full_name %></td>
                <td><%= attachment_image_tag user, :image, format: 'jpeg', size: "40x40" %></td>
                <td><%= user.followings.count %></td>
                <td><%= user.followers.count %></td>
                <td><%=link_to 'ユーザー詳細へ', public_user_path(user.id), class:"btn btn-success" %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center text-success">相互フォローの状態の場合のみDMができます</p>
      <% end %>
       <%= paginate @users %>
    </div>
  </div>
</div>