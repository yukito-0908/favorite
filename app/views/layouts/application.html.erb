<!DOCTYPE html>
<html>
  <head>
    <title>FavoriteFood</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="m-4  d-flex justify-content-between">
    <div class="header-logo">
      <%= image_tag 'favorite_food.jpg' %>
    </div>
  <div class="header-item d-flex">
    <% if admin_signed_in? %>
      <li class="mx-4" style="list-style:none;"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete,data: { confirm: 'ログアウトしますか？' }, class: "text-dark rounded border border-dark p-2" %></li>
      <li class="mx-4" style="list-style:none;"><%= link_to "ユーザー一覧", admins_users_path, class: "text-dark rounded border border-dark p-2" %></li>
      <li class="mx-4" style="list-style:none;"><%= link_to "投稿一覧", admins_posts_path,"data-turbolinks": false, class: "text-dark rounded border border-dark p-2" %></li>
      <li class="mx-4" style="list-style:none;"><%= link_to "タグ一覧", admins_tags_path, class: "text-dark rounded border border-dark p-2" %></li>
    <% elsif user_signed_in? %>
      <%= link_to  destroy_user_session_path, method: :delete,data: { confirm: 'ログアウトしますか？' },class:"m-2" do %> <%= image_tag 'door.jpg' %> <% end %>
      <%= link_to   public_search_all_path,"data-turbolinks": false,class:"m-2"  do %> <%= image_tag 'searh.jpg' %> <% end %>
      <%= link_to   public_users_mypage_path,class:"m-2" do %> <%= image_tag 'mypage.jpg' %> <% end %>
      <%= link_to  public_rooms_path,class:'m-2' do %><%= image_tag 'mail.jpg' %> <% end %>
    <% else %>
      <li class="mx-4" style="list-style:none;"><%= link_to "ログイン", new_user_session_path, class: "text-dark rounded border border-dark p-2" %></li>
      <li class="mx-4" style="list-style:none;"><%= link_to "新規登録", new_user_registration_path,  class: "text-dark rounded border border-dark p-2" %></li>
    <% end %>
  </div>
  </header>
  <body>
    <%= yield %>
    <footer>
      <div class="footer-all mt-5">
        <h5 class="text-center text-dark">@favorite_food</h5>
      </div>
    </footer>
  </body>

</html>


